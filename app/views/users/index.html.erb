<h1 class="text-align-center">Users</h1>
<ul>
  <% @user.each do |user| %>
    <li>
      <%= link_to "#{root_path}users/#{user.id}"  do %>
      <div class="display-flex">
        <div class="user-photo-container">
          <img class="user-photo" src=<%= user.photo %> />
        </div>
        <div class="user-text-details-container">
          <h2>
            <%= user.name %>
          </h2>
          <p>Number of posts: <%= user.posts_counter %></p>
        </div>
      </div>
      <% end %>
    </li>
  <% end %>
</ul>
